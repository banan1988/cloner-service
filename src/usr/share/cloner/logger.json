{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s %(levelname)s %(process)s --- [%(threadName)s] %(filename)s.%(name)s.%(funcName)s():%(lineno)d - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "cloner.log",
      "backupCount": 30,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "my_module": {
      "level": "ERROR",
      "handlers": [
        "console"
      ],
      "propagate": "no"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console",
      "file_handler"
    ]
  }
}